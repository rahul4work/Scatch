<%- include('./partials/header') %>
<div class="w-full min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">Your Shopping Cart (<span id="cart-count"><%= user.cart.length %></span>)</h1>
        
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Scrollable Products Section -->
            <div class="lg:w-2/3">
                <% if(user.cart.length === 0) { %>
                    <div class="bg-white rounded-lg shadow p-8 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <h3 class="mt-4 text-lg font-medium text-gray-900">Your cart is empty</h3>
                        <p class="mt-1 text-gray-500">Start adding some items to your cart</p>
                        <div class="mt-6">
                            <a href="/shop" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
                                Continue Shopping
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <div class="bg-white rounded-lg shadow overflow-hidden">
                        <div class="divide-y divide-gray-200 max-h-[calc(100vh-200px)] overflow-y-auto" id="cart-items-container">
                            <% user.cart.forEach((item, index) => { %>
                                <div class="p-4 sm:p-6" id="cart-item-<%= item._id %>">
                                    <div class="flex flex-col sm:flex-row gap-4">
                                        <!-- Product Image -->
                                        <div class="w-full sm:w-1/3 lg:w-1/4 flex-shrink-0 bg-[<%= item.productId.bgcolor %>] rounded-md overflow-hidden flex items-center justify-center h-40">
                                            <img class="h-full object-contain" src="data:image/jpeg;base64, <%= item.productId.image.toString('base64') %>" alt="<%= item.productId.name %>">
                                        </div>
                                        
                                        <!-- Product Details -->
                                        <div class="flex-1 flex flex-col justify-between">
                                            <div>
                                                <div class="flex justify-between">
                                                    <h3 class="text-lg font-medium text-gray-900"><%= item.productId.name %></h3>
                                                    <p class="text-lg font-semibold">₹<span class="item-total" data-item-id="<%= item._id %>"><%= (item.productId.price * item.quantity).toLocaleString() %></span></p>
                                                </div>
                                                <% if(item.productId.color || item.size) { %>
                                                    <div class="mt-1 text-sm text-gray-500">
                                                        <% if(item.productId.color) { %>
                                                            <span>Color: <%= item.productId.color %></span>
                                                        <% } %>
                                                        <% if(item.size) { %>
                                                            <span class="<%= item.productId.color ? 'ml-2' : '' %>">Size: <%= item.size %></span>
                                                        <% } %>
                                                    </div>
                                                <% } %>
                                                <p class="mt-1 text-sm text-gray-500">Unit Price: ₹<%= item.productId.price.toLocaleString() %></p>
                                            </div>
                                            
                                            <!-- Quantity Controls -->
                                            <div class="mt-4 flex items-center justify-between">
                                                <div class="flex items-center">
                                                    <button onclick="updateQuantity('<%= item._id %>', 'decrease')" class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded-l-md bg-gray-50 hover:bg-gray-100">
                                                        <i class="ri-subtract-line"></i>
                                                    </button>
                                                    <div class="w-12 h-8 flex items-center justify-center border-t border-b border-gray-300 bg-white text-center quantity-display" data-item-id="<%= item._id %>">
                                                        <%= item.quantity %>
                                                    </div>
                                                    <button onclick="updateQuantity('<%= item._id %>', 'increase')" class="w-8 h-8 flex items-center justify-center border border-gray-300 rounded-r-md bg-gray-50 hover:bg-gray-100">
                                                        <i class="ri-add-line"></i>
                                                    </button>
                                                </div>
                                                <button onclick="removeItem('<%= item._id %>')" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">
                                                    Remove
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
            
            <!-- Order Summary - Sticky on desktop -->
            <% if(user.cart.length > 0) { %>
                <div class="lg:w-1/3">
                    <div class="bg-white rounded-lg shadow p-6 sticky top-6">
                        <h2 class="text-lg font-medium text-gray-900 mb-4">Order Summary</h2>
                        
                        <div class="space-y-3">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Subtotal (<span id="summary-item-count"><%= user.cart.length %></span> items)</span>
                                <span>₹<span id="subtotal-amount"><%= user.cart.reduce((total, item) => total + (item.productId.price * item.quantity), 0).toLocaleString() %></span></span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Discount</span>
                                <span class="text-green-600">-₹0</span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600">Shipping</span>
                                <span class="text-green-600">FREE</span>
                            </div>
                            <div class="border-t border-gray-200 pt-3 mt-3 flex justify-between">
                                <span class="text-base font-medium">Total</span>
                                <span class="text-base font-medium">₹<span id="total-amount"><%= user.cart.reduce((total, item) => total + (item.productId.price * item.quantity), 0).toLocaleString() %></span></span>
                            </div>
                        </div>
                        
                        <form action="/checkout" method="POST" class="mt-6">
                            <a href="/checkout" class="w-full bg-indigo-600 border border-transparent rounded-md py-3 px-4 flex items-center justify-center text-base font-medium text-white hover:bg-indigo-700">
                                Proceed to Checkout
                            </a>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
    // Function to remove item from cart
    async function removeItem(itemId) {
        try {
            const response = await fetch(`/cart/remove/${itemId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();
            
            if (data.success) {
                // Remove item from DOM
                document.getElementById(`cart-item-${itemId}`).remove();
                
                // Update cart count
                const cartCount = document.getElementById('cart-count');
                const summaryItemCount = document.getElementById('summary-item-count');
                const newCount = parseInt(cartCount.textContent) - 1;
                cartCount.textContent = newCount;
                summaryItemCount.textContent = newCount;
                
                // Update totals
                updateCartTotals(data.newTotal);
                
                // If cart is empty, show empty message
                if (newCount === 0) {
                    location.reload(); // Reload to show empty cart message
                }
            }
        } catch (error) {
            console.error('Error removing item:', error);
        }
    }

    // Function to update quantity
    async function updateQuantity(itemId, action) {
        try {
            const response = await fetch(`/cart/update/${itemId}`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ action })
            });

            const data = await response.json();
            
            if (data.success) {
                // Update quantity display
                const quantityDisplay = document.querySelector(`.quantity-display[data-item-id="${itemId}"]`);
                quantityDisplay.textContent = data.newQuantity;
                
                // Update item total
                const itemTotal = document.querySelector(`.item-total[data-item-id="${itemId}"]`);
                itemTotal.textContent = (data.newQuantity * data.itemPrice).toLocaleString();
                
                // Update cart totals
                updateCartTotals(data.newTotal);
            }
        } catch (error) {
            console.error('Error updating quantity:', error);
        }
    }

    // Function to update cart totals
    function updateCartTotals(newTotal) {
        document.getElementById('subtotal-amount').textContent = newTotal.toLocaleString();
        document.getElementById('total-amount').textContent = newTotal.toLocaleString();
    }
</script>

<%- include('./partials/footer') %>
<%- include('./partials/header') %>

    <% if(error.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 z-10 mx-2 max-w-sm text-center">
            <span class="inline-block mt-1 mb-1 text-white text-sm md:text-base">
                <%= error %>
            </span>
        </div>
    <% } %>
    
    <div class="w-full min-h-screen flex flex-col md:flex-row px-4 md:px-20 py-8 md:py-0">
        <!-- Registration Section -->
        <div class="w-full md:w-1/2 flex items-center justify-center min-h-screen md:h-screen">
            <div class="w-full max-w-md md:max-w-none md:px-32 px-4">
                <h3 class="text-2xl md:text-4xl mb-2">welcome to <span class="text-blue-400 font-semibold">Scatch</span></h3>
                <h4 class="text-lg md:text-2xl mb-5">create your account</h4>
                <form autocomplete="off" action="/users/register" method="post">
                    <input
                        class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 text-sm md:text-base"
                        type="text" placeholder="Full Name" name="fullname">
                    <input
                        class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 text-sm md:text-base"
                        type="email" placeholder="Email" name="email">
                    <input
                        class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 text-sm md:text-base"
                        type="password" placeholder="Password" name="password">
                    <input class="w-full md:w-auto px-5 rounded-full py-3 mt-2 bg-blue-500 text-white cursor-pointer hover:bg-blue-600 transition-colors text-sm md:text-base" 
                        type="submit" value="Create My Account">
                </form>
            </div>
        </div>
        
        <!-- Login Section -->
        <div class="w-full md:w-1/2 flex items-center justify-center min-h-screen md:h-screen mt-8 md:mt-0">
            <div class="w-full max-w-md md:max-w-none md:px-32 px-4">
                <h4 class="text-lg md:text-2xl capitalize mb-5">login your account</h4>
                <form autocomplete="off" action="/users/login" method="post">
                    <input
                        class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 text-sm md:text-base"
                        type="email" placeholder="Email" name="email">
                    <input
                        class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 text-sm md:text-base"
                        type="password" placeholder="Password" name="password">
                    <input class="w-full md:w-auto px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white cursor-pointer hover:bg-blue-600 transition-colors text-sm md:text-base" 
                        type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>
    
<%- include('./partials/footer') %>